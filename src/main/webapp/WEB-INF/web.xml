<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/Main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/auth/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/auth/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <jsp-file>/pages/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPanel</servlet-name>
        <jsp-file>/admin/Components/adminHome.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPanel</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <jsp-file>/admin/pages/add_book.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/Add_book</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AllBooks</servlet-name>
        <jsp-file>/admin/pages/all_books.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllBooks</servlet-name>
        <url-pattern>/All_books</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Orders</servlet-name>
        <jsp-file>/admin/pages/orders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Orders</servlet-name>
        <url-pattern>/Orders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditBooks</servlet-name>
        <jsp-file>/admin/pages/edit_books.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBooks</servlet-name>
        <url-pattern>/Edit_books</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Recent_books</servlet-name>
        <jsp-file>/pages/all_recent_books.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Recent_books</servlet-name>
        <url-pattern>/Recent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>New_books</servlet-name>
        <jsp-file>/pages/all_new_books.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>New_books</servlet-name>
        <url-pattern>/New</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Old_books</servlet-name>
        <jsp-file>/pages/all_old_books.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Old_books</servlet-name>
        <url-pattern>/Old</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Book_details</servlet-name>
        <jsp-file>/pages/view_book.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Book_details</servlet-name>
        <url-pattern>/Book_details</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Cart</servlet-name>
        <jsp-file>/pages/cart.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>

</web-app>